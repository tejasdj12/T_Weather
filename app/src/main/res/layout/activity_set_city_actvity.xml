<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="vu.de.tejasjadhav.tweather.SetCityActvity"
	>

	<EditText
		android:id="@+id/txtCityName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentRight="true"
		android:layout_alignParentStart="true"
		android:layout_alignParentTop="true"
		android:hint="Enter your city name"
		android:inputType="textCapWords|textAutoCorrect"
		/>

	<Button
		android:id="@+id/btnSearchCity"
		style="@style/ButtonOutline"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignEnd="@+id/txtCityName"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_alignRight="@+id/txtCityName"
		android:layout_below="@+id/txtCityName"
		android:text="Search City"
		/>

	<ListView
		android:id="@+id/lstCityList"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/btnSearchCity"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="@dimen/label_padding"
		/>
</RelativeLayout>
